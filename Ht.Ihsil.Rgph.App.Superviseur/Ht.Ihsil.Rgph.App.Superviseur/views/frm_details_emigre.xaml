        <Label Content="#SDE:001201201/Batiman:1" x:Name="lbl_details_1" FontWeight="Bold" FontStyle="Italic" Foreground="#FF0F7AF9" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
